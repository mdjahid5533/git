<%- include('../partials/header') %>

<main>
    <div class="row">
        <div class="col-md-2">
            <%- include('../partials/sidebar') %>
        </div>

        <div class="col-md-8 offset-md-1 text-center">
            <div class="row">
                <% if(post.length < 1) { %>
                <div class="header">
                    <h1 class="text-muted">You have no Post..! <br>Please create post and try again.</h1>
                    <a href="/posts/create"><button class="btn"> Create Post</button></a>
                </div>
                <% } else {%>
                <% for(let posts of post.reverse()){ %>
                <div class="card bg-light mb-2 mr-2" style="width: 18rem;">
                    <% if(posts.thumbnail) { %>
                    <img class="card-img-top" src="<%= posts.thumbnail %>" alt="<%= posts.title %>">
                    <% } else {%>
                        <img src="/uploads/img_590802a32a641.jpg" height="145px" alt="">

                        <% } %> 
                    <div class="card-body">
                        <h5 class="card-title"><%= posts.title %></h5>
                        <a href="/posts/edit/<%= posts._id %> " class="btn btn-primary">edit</a>

                        <form action="/posts/delete/<%= posts._id %>" method="POST">
                            <button type="submit" class="btn">delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
                <% } %>
            </div>
        </div>
    </div>

</main>

<%- include('../partials/footer') %>